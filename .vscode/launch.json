    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Scrapy Spider",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/scrapy",
            "args": ["crawl", "dynamic", "-L", "INFO"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/scrapy-demo/bookscraper/bookscraper",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}